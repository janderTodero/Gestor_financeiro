<h2 class="text-2xl font-bold mb-6 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6 max-w-md mx-auto bg-white p-8 rounded shadow" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
  </div>

  <div>
    <%= f.submit "Send me reset password instructions", class: "w-full bg-black text-white py-2 px-4 rounded hover:bg-gray-800 transition" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
