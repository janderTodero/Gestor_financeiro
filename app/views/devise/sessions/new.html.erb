<h2 class="text-2xl font-bold mb-6 text-center">Log in</h2>

<% if flash[:alert] %>
  <div class="max-w-md mx-auto mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
    <p><%= flash[:alert] %></p>
  </div>
<% elsif flash[:notice] %>
  <div class="max-w-md mx-auto mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 max-w-md mx-auto bg-white p-8 rounded shadow" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-sm text-gray-700" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in", class: "w-full bg-black text-white py-2 px-4 rounded hover:bg-gray-800 transition" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
