<div 
  id="<%= dom_id transaction %>" 
  class="max-w-md mx-auto p-6 rounded-xl shadow-lg space-y-6 border border-gray-200 hover:shadow-xl transition duration-300 
    <%= case transaction.transaction_type
        when 'entrada' then 'bg-green-50'
        when 'saida' then 'bg-red-50'
        else 'bg-white'
        end %>">
  
  <!-- Header com título e valor -->
  <div class="flex justify-between items-center">
    <div>
      <p class="text-xs text-gray-500 uppercase tracking-wide">Título</p>
      <p class="text-base font-semibold text-gray-800"><%= transaction.title %></p>
    </div>
    <div class="text-right">
      <p class="text-xs text-gray-500 uppercase tracking-wide">Valor</p>
      <p class="text-lg font-bold <%= transaction.amount < 0 ? 'text-red-600' : 'text-green-600' %>">
        <%= number_to_currency(transaction.amount, unit: "R$", separator: ",", delimiter: ".") %>
      </p>
    </div>
  </div>

  <!-- Linha divisória -->
  <div class="border-t border-gray-100"></div>

  <!-- Descrição -->
  <div>
    <p class="text-xs text-gray-500 uppercase tracking-wide">Descrição</p>
    <p class="text-sm text-gray-700 leading-relaxed">
      <%= transaction.description %>
    </p>
  </div>

  <!-- Tipo de transação com badge -->
  <div>
    <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Tipo de Transação</p>
    <span class="inline-block px-3 py-1 rounded-full text-sm font-medium
      <%= case transaction.transaction_type
          when 'entrada' then 'bg-green-200 text-green-900'
          when 'saida' then 'bg-red-200 text-red-900'
          else 'bg-gray-200 text-gray-800'
          end %>">
      <%= transaction.transaction_type %>
    </span>
  </div>
</div>
