<p class="text-green-600"><%= notice %></p>

<h1 class="text-2xl font-bold mb-6">Dashboard Financeiro</h1>

<div class="flex gap-5 mb-8">
  <div class="p-5 bg-cyan-100 rounded-lg">
    <strong class="block text-gray-700">Saldo atual</strong>
    <span class="text-lg font-semibold"><%= number_to_currency(@balance, unit: "R$ ") %></span>
  </div>

  <div class="p-5 bg-green-100 rounded-lg">
    <strong class="block text-gray-700">Total de Entradas</strong>
    <span class="text-lg font-semibold"><%= number_to_currency(@total_incomes, unit: "R$ ") %></span>
  </div>

  <div class="p-5 bg-red-100 rounded-lg">
    <strong class="block text-gray-700">Total de Sa√≠das</strong>
    <span class="text-lg font-semibold"><%= number_to_currency(@total_expenses, unit: "R$ ") %></span>
  </div>
</div>

<% content_for :title, "Transactions" %>

<h1 class="text-2xl font-bold mb-4">Transactions</h1>

<div id="transactions" class="space-y-4">
  <% @transactions.each do |transaction| %>
    <div class="p-4 border rounded-md shadow-sm bg-white">
      <%= render transaction %>
      <p class="mt-2">
        <%= link_to "Show this transaction", transaction, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to "New transaction", new_transaction_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
</div>
